{
  "name": "My extension",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": [
    "storage", 
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "content_scripts": [
   {
     "matches": ["https://*/*"],
     "js": ["content-script.js"]
   }
 ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}